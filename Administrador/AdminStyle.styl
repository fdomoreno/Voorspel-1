*
	padding 0px
	margin 0px

body
	background white
	font-family helvetica
	font-size 18px

header 
	background white
	box-shadow 0px 0px 10px rgba(0,0,0,0.5)
	color gray
	font-size 18px
	height 80px
	width 100%

header nav ul li
	color gray
	cursor pointer
	display inline-block
	margin 5px
	padding 5px



header nav 
	text-align right
	padding 15px 5%

header h1 
	border-top 15px solid rgb(19, 146, 85)
	border-left 20px solid transparent
	border-right 20px solid transparent
	color #139255
	cursor pointer
	width 80%
	padding 5px 0px 
	margin 30px auto
	text-align center
	font-variant small-caps
	font-weight 100
	font-size 25px
	-webkit-transition all 0.25s
	 -moz-transition all 0.25s
	 -ms-transition all 0.25s
	 -o-transition all 0.25s
	 transition all 0.25s 


#SeccionGames
	border 1px solid red
	color black
	width 80%
	height auto
	padding 5px
	margin 120px auto 

.SelecTorneos,.SelecJuegos
	cursor pointer


.Juegos
	display none

#SeccionGames article
	-webkit-animation show 1s

@-webkit-keyframes show 
	from 
		opacity 0
	to 
		opacity 1



.Contenedor-Formulario
	border 1px solid red
	display none
	width 40%
	margin 0 auto
	padding 5px 
	text-align center

.Contenedor-Formulario input 
	display block 
	margin 25px auto
	padding 5px
	border-radius 50px
	font-size 17px  
	outline none 


