opacidad=rgba(0,0,0,0.5)

*
	padding 0px
	margin 0px

body
	background silver
	font-size 20px
	font-family helvetica
	maz-width 1000px

.padre
	background opacidad
	color white
	text-align center
	width 100%
	height auto
	margin 0 auto



.padre article
	background darkred 
	cursor pointer
	display inline-block
	margin 20px auto
	padding 10px 0px  
	position absolute
	top 0px 
	left 0px 
	height 100px
	width 100%
	height 600px
	-webkit-transition all 5s
	-moz-transition all 5s
	-ms-transition all 5s
	-o-transition all 5s
	transition all 5s  

	

@-webkit-keyframes nombre 
	from
		-webkit-transform scale(1)
	to 
		-webkit-transform scale(0.8)
		opacity 0.5


