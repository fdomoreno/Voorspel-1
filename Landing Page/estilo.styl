opacidad=rgba(0,0,0,0.5)
Pulpo-Color=#FF5D55

*
	margin 0
	padding 0

body
	background #fff
	font-size 20px
	font-family Lucida Sans Unicode
	max-width 960px
	width 100%

header 
	background #F0F0F0
	color #FF5D55
	position fixed
	top 0px 
	left 0px
	width 100%
	height auto
	z-index 200
	font-variant small-caps
	font-size 16px 


header h1
	cursor pointer
	text-align center
	font-weight 100
	
header a 
	color opacidad
	text-decoration none
	
header nav ul li 
	display inline-block
	border-left 1px solid Pulpo-Color
	color opacidad
	margin-right 2px
	margin-top 10px 	
	text-align center
	padding 5px 8px
	-webkit-transition all 0.25s
	-moz-transition all 0.25s
	-ms-transition all 0.25s
	-o-transition all 0.25s
	transition all 0.25s
	
header nav 
	text-align right
	margin-top -24px
	padding 0px 20px 

header h2 
	color opacidad
	text-align center
	font-size 20px 

header nav ul li:hover
	padding 0px 10px


header nav ul li:hover a 
	color darkred

header nav ul li:first-child
	border-left 2px solid Pulpo-Color

header nav ul li:last-child
	border-right 2px solid Pulpo-Color

.wallpapper-zone
	background darkred
	margin 0 auto
	width 100%
	height 50px
	position relative 
	top 30px
	left 0px



@media screen and (max-width:550px)

	header 
		background-image -webkit-linear-gradient(-85deg,#D62D26 106px ,#FF5D55 30px)
		background-color #FF5D55
		padding 20px 0px 
	header h1,h2 
		color #fff

	header nav ul li 
		display block
		border-top 1px solid white
		border-left none
		border-right none
		cursor pointer
		margin 0px auto
		width 80%
		position relative
		top 20px


	header nav ul li:hover
		border-top 1px solid darkred
		padding 5px 16px



	header nav ul li:last-child
		border-right none
	header nav ul li:first-child
		border-left none