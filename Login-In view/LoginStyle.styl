@media screen and (max-width:660px)
	#formulario-enter 
		text-align center
		margin-left 0px
	#formulario-enter input
		width 60%

@media screen and (max-width:370px)
	#formulario-enter input,#formulario-enter input[type="submit"]
		width 90%
	



